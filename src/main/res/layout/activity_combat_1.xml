<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/attacker_strength"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Attacker combat strenght: 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attacker_strength_notes"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="(Armor uses attack strength when defending against armor)"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginTop="604dp"
        android:gravity="center"
        android:text="Current combat differential: 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/defender_strength"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Defender combat strenght: 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/defender_strength_notes"
        android:layout_width="171dp"
        android:layout_height="72dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:text="(Armor uses defense strength when attacking infantry in a city)"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/retreat_before_combat_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="374dp"
        android:layout_height="44dp"
        android:text="Attacker commits an adjacent unit in recce posture \n(it will take attrition)"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="265dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PACT commits sappers"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="330dp" />

    <RadioGroup
        android:id="@+id/attackerAttrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/attackerAttrition_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="12dp" />

        <RadioButton
            android:id="@+id/attackerAttrition_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="60dp" />

        <RadioButton
            android:id="@+id/attackerAttrition_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="60dp" />


        <RadioButton
            android:id="@+id/attackerAttrition_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="3"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="60dp" />


        <RadioButton
            android:id="@+id/attackerAttrition_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="60dp" />

        <RadioButton
            android:id="@+id/attackerAttrition_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="5"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="60dp" />


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>